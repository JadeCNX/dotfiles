{
  "coc.preferences.colorSupport": true,
  "coc.preferences.extensionUpdateCheck": "never",
  /* "coc.preferences.hoverTarget": "echo", */
  /* "diagnostic.messageTarget": "echo", */
  "json.enable": true,
  "list.indicator": ">",
  "list.nextKeymap": "<c-n>",
  "list.previousKeymap": "<c-p>",
  "python.jediEnabled": false,
  "signature.target": "echo",
  "suggest.echodocSupport": true,
  "suggest.enablePreview": true,
  /* "suggest.floatEnable": false, */
  "suggest.autoTrigger":"always",
  "suggest.noselect": true,
  "suggest.snippetIndicator": "ïƒ§",
  "suggest.triggerAfterInsertEnter": true,
  "tsserver.enable": true,
  "yank.enableCompletion": true,
  "languageserver": {
    "swift": {
      "command": "~/.cache/source-lsp/release/sourcekit-lsp",
      "filetypes": ["swift", "objc", "objcpp"],
      "rootPatterns": [".xcodeproj", ".xcworkspace", ".git"]
    },
    "ccls": {
      "command": "ccls",
      "args": ["--log-file=/tmp/ccls/ccls.log"],
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
     "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}
