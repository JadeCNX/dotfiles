" set extensions
set argtextobj
set commentary
set easymotion
set exchange
set highlightedyank
set matchit
set multiple-cursors
set NERDTree
set ReplaceWithRegister
set surround
set textobj-indent
set vim-paragraph-motion
set ideajoin

" set options
set history
set hlsearch
set ignorecase
set incsearch
set number
set scrolljump 1
set scrolloff 5
set smartcase
set wrapscan
" set relativenumber

imap jj <C-c>

let mapleader=" "

map s <Plug>(easymotion-s2)
map S <Plug>(easymotion-s2)

map <c-h> <C-W>h
map <c-j> <C-W>j
map <c-k> <C-W>k
map <c-l> <C-W>l

nnoremap Y "*y
vnoremap Y "*y

map <space>nn :<c-u>%normal<space>
vmap <space>nn :<c-u>'<,'>normal<space>

map <space>h :<c-u>noh<cr>

nnoremap c* *Ncgn

vnoremap <silent> * "cy/c<cr>
vnoremap <silent> # "cy/c<cr>

nmap <space>ee :<C-u>:NERDTreeToggle<cr>
nmap <space>ef :<C-u>:NERDTreeFocus<cr>

nmap Q @@

nnoremap - $
vnoremap - $
