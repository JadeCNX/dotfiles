" set extensions
set argtextobj
set commentary
set easymotion
set exchange
set highlightedyank
set matchit
set multiple-cursors
set NERDTree
set ReplaceWithRegister
set surround
set textobj-indent
set vim-paragraph-motion
set ideajoin
set number
set relativenumber

" set options
set hlsearch
set history
set incsearch
set ignorecase

imap jj <C-c>

map <c-h> <C-W>h
map <c-j> <C-W>j
map <c-k> <C-W>k
map <c-l> <C-W>l

nnoremap Y "*y
vnoremap Y "*y

map <space>nn :<c-u>%normal<space>
vmap <space>nn :<c-u>'<,'>normal<space>

map <space><cr> :<c-u>noh<cr>

nnoremap c* *Ncgn

vnoremap <silent> * "cy/c<cr>
vnoremap <silent> # "cy/c<cr>

nmap <space>ee :<C-u>:NERDTreeToggle<cr>
nmap <space>ef :<C-u>:NERDTreeFocus<cr>

nmap Q @@

nnoremap - $
vnoremap - $
